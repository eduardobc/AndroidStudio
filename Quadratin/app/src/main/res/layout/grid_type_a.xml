<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:scaleType="centerCrop"
    android:orientation="horizontal">



    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/grid_container_a"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:orientation="horizontal"
        android:clipChildren="true"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth">

        <RelativeLayout
            android:id="@+id/grid_a_item_a"
            android:layout_gravity="fill"
            android:layout_columnSpan="2"
            android:layout_rowSpan="4"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/grid_img_a"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:src="@drawable/q_test_img_cultura"
                android:scaleType="centerCrop">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/grid_a_item_b"
            android:layout_column="2"
            android:layout_rowSpan="2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="fill"
            android:padding="1dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/grid_img_b"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:src="@drawable/q_test_img_cultura"
                android:scaleType="centerCrop">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/grid_a_item_c"
            android:layout_column="2"
            android:layout_rowSpan="2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="fill"
            android:padding="1dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/grid_img_c"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:src="@drawable/q_test_img_cultura"
                android:scaleType="centerCrop">
            </ImageView>
        </RelativeLayout>




    </GridLayout>
</RelativeLayout>