<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quadratin_custom_toobar_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/primary_dark"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/quadratin_toobar_open_menu"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/quadratin_menu_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quadratin_toobar_logo"
                android:src="@drawable/quadratin_logo"
                android:maxHeight="50dp"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="32dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/quadratin_toobar_search"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/quadratin_search_icon"
                android:layout_gravity="right"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/quadratin_toobar_view"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/quadratin_view_icon"
                android:layout_gravity="right"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/quadratin_toobar_camera"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/quadratin_camera_icon"
                android:layout_gravity="right"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/quadratin_toobar_mesh"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/quadratin_mesh_icon"
                android:layout_gravity="right"
                android:adjustViewBounds="false"
                android:focusable="false"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.Toolbar>