<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:id="@+id/grid_container_e">

    <RelativeLayout
        android:layout_gravity="fill_horizontal"
        android:layout_weight="2"
        android:layout_width="1sp"
        android:layout_height="100sp">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@color/CardBkgColor"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardContentBkgColor"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="10dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Category Category Category"
                    android:textColor="@color/CardContentTextColorOrange"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="3"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="09:35"
                    android:layout_gravity="right"
                    android:textColor="@color/CardContentTextColorOrange"
                    android:textStyle="normal"
                    android:gravity="right"
                    android:layout_weight="7"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="The post title"
                android:textColor="@color/CardContentTextColorwhite"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>